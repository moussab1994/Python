    <script>
        document.addEventListener('DOMContentLoaded', function() {
            
            const brilliantBlues = ['#007BFF', '#54A0FF', '#1E3A8A', '#80bdff', '#3b82f6'];

            function wrapLabel(label, maxLength = 16) {
                if (label.length <= maxLength) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                for (const word of words) {
                    if ((currentLine + ' ' + word).trim().length > maxLength) {
                        lines.push(currentLine.trim());
                        currentLine = word;
                    } else {
                        currentLine = (currentLine + ' ' + word).trim();
                    }
                }
                if (currentLine) {
                    lines.push(currentLine.trim());
                }
                return lines;
            }

            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                } else {
                    return label;
                }
            };
            
            const sharedChartOptions = {
                 maintainAspectRatio: false,
                 plugins: {
                    legend: {
                        labels: {
                            color: '#212529',
                            font: {
                                size: 14
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                           title: tooltipTitleCallback
                        }
                    }
                },
                scales: {
                    y: {
                        ticks: { color: '#212529' },
                        grid: { color: 'rgba(0, 0, 0, 0.1)' }
                    },
                    x: {
                        ticks: { color: '#212529' },
                        grid: { color: 'rgba(0, 0, 0, 0.1)' }
                    }
                }
            };

            const complexityData = {
                labels: Array.from({ length: 12 }, (_, i) => `Week ${i + 1}`),
                datasets: [{
                    label: 'Project Complexity Score',
                    data: [1, 2, 2.5, 3, 4, 5, 6, 6.5, 7.5, 7, 8.5, 10],
                    borderColor: brilliantBlues[0],
                    backgroundColor: 'rgba(0, 123, 255, 0.2)',
                    fill: true,
                    tension: 0.4
                }]
            };
            const complexityCtx = document.getElementById('complexityChart').getContext('2d');
            new Chart(complexityCtx, {
                type: 'line',
                data: complexityData,
                options: {
                    ...sharedChartOptions,
                    scales: {
                         y: { beginAtZero: true, suggestedMax: 10, title: { display: true, text: 'Complexity (1-10)', color: '#212529' }, ticks: { color: '#212529' }, grid: { color: 'rgba(0, 0, 0, 0.1)' } },
                         x: { ticks: { color: '#212529' }, grid: { display: false } }
                    }
                }
            });

            const phase2SkillsData = {
                labels: ['File I/O', 'OOP', 'Data Analysis', 'Visualization'],
                datasets: [{
                    label: 'Focus Area',
                    data: [25, 25, 25, 25],
                    backgroundColor: brilliantBlues,
                    borderColor: '#ffffff',
                    borderWidth: 2
                }]
            };
            const phase2SkillsCtx = document.getElementById('phase2SkillsChart').getContext('2d');
            new Chart(phase2SkillsCtx, {
                type: 'doughnut',
                data: phase2SkillsData,
                options: {
                    maintainAspectRatio: false,
                    plugins: {
                       legend: { position: 'top', labels: { color: '#212529', font: { size: 14 }}},
                       tooltip: {
                            callbacks: {
                               title: tooltipTitleCallback
                            }
                        }
                    }
                }
            });

            const skillProfileData = {
                labels: ['Core Python', 'Data Handling', 'APIs', 'Hardware', 'AI/ML'],
                datasets: [{
                    label: 'Skill Level Achieved',
                    data: [10, 9, 8, 6, 7],
                    backgroundColor: 'rgba(0, 123, 255, 0.2)',
                    borderColor: brilliantBlues[0],
                    pointBackgroundColor: brilliantBlues[0],
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: brilliantBlues[0]
                }]
            };
             const skillProfileCtx = document.getElementById('skillProfileChart').getContext('2d');
             new Chart(skillProfileCtx, {
                type: 'radar',
                data: skillProfileData,
                options: {
                     maintainAspectRatio: false,
                     plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                title: tooltipTitleCallback
                            }
                        }
                     },
                     scales: {
                        r: {
                            angleLines: { color: 'rgba(0, 0, 0, 0.1)'},
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            pointLabels: { font: { size: 14 }, color: '#212529'},
                            ticks: { backdropColor: 'transparent', color: '#212529' },
                            suggestedMin: 0,
                            suggestedMax: 10
                        }
                     }
                }
             });

        });
    </script>
